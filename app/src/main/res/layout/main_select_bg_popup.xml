<?xml version="1.0" encoding="utf-8"?>
<HorizontalScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/popup_size"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        >

        <ImageButton
            android:id="@+id/action_set_bg_white"
            style="@style/PopupButton"
            android:src="#FFF"
            />
        <ImageButton
            android:id="@+id/action_set_bg_pink"
            style="@style/PopupButton"
            android:src="@color/pink"
            />
        <ImageButton
            android:id="@+id/action_set_bg_blue"
            style="@style/PopupButton"
            android:src="@color/blue"
            />
        <ImageButton
            android:id="@+id/action_set_bg_green"
            style="@style/PopupButton"
            android:src="@color/green"
            />
        <ImageButton
            android:id="@+id/action_set_bg_purple"
            style="@style/PopupButton"
            android:src="@color/purple"
            />
    </LinearLayout>

</HorizontalScrollView>